<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.ViewModelSumarActivity">

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvSumarConViewModel" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tvSumarSinViewModel" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:textSize="24sp" android:textAlignment="center"
            android:hint="Con ViewModel" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btSumar"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvSumarSinViewModel"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:hint="Sin ViewModel" android:textAlignment="center" android:textSize="24sp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toTopOf="@+id/tvSumarConViewModel"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Sumar"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:id="@+id/btSumar"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvSumarConViewModel"/>
</android.support.constraint.ConstraintLayout>